# Client-facing configuration (exposed to the browser in Vite builds)
VITE_GEMINI_KEY=

# Mail provider selection: mailgun | sendgrid | none
MAIL_PROVIDER=mailgun

# Sender for outbound messages (ideally a domain you control)
MAIL_FROM=no-reply@example.com
# Destination inbox for contact form submissions
CONTACT_EMAIL=contact@example.com

# Mailgun configuration
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# SendGrid configuration (used when MAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=

# Vercel deploy hook URL (optional)
VERCEL_DEPLOY_HOOK=
# Shared secret to protect /api/deploy requests
WEBHOOK_SECRET=
